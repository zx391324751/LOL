<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="fill_parent"
            android:layout_height="56dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/activity_main_iv_left_menu"
                    android:padding="6dp"
                    android:src="@drawable/icon_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/toolbar_tv_title"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:text="LOL"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/activity_main_btn_zhibo"
                    android:textColor="@color/white"
                    android:text="直播"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:background="@color/grey_line"
            android:paddingTop="1dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/activity_main_layout_news"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:layout_marginRight="1dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_main_tv_indicator_0"
                    android:text="新闻资讯"
                    android:textColor="@color/grey_42"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_main_layout_hero"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_main_tv_indicator_1"
                    android:text="英雄资料"
                    android:textColor="@color/grey_42"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_main_layout_personal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_main_tv_indicator_2"
                    android:text="斗鱼直播"
                    android:textColor="@color/grey_42"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include
        android:layout_width="280dp"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        layout="@layout/layout_left_menu"/>

</android.support.v4.widget.DrawerLayout>
