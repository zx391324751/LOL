<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/left_menu_iv_photo"
            android:padding="2dp"
            android:background="@drawable/user_head"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/left_menu_tv_name"
            android:layout_toRightOf="@+id/left_menu_iv_photo"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="昵称"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/left_menu_tv_server_name"
            android:layout_below="@+id/left_menu_tv_name"
            android:layout_toRightOf="@+id/left_menu_iv_photo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="区号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/left_menu_tv_level"
            android:layout_below="@+id/left_menu_tv_name"
            android:layout_toRightOf="@+id/left_menu_tv_server_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="段位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/left_menu_tv_fight_level"
            android:layout_below="@+id/left_menu_tv_server_name"
            android:layout_toRightOf="@+id/left_menu_iv_photo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="战斗力"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/left_menu_layout_account_manager"
        android:background="@drawable/left_menu_item_bg"
        android:clickable="true"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:text="账号管理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/left_menu_item_bg"
        android:clickable="true"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:text="检查更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/left_menu_item_bg"
        android:clickable="true"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:text="检查更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>