<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_item_hero_relativelayout"
    android:layout_margin="2dp"
    android:background="@color/yellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/adapter_item_hero_iv_photo"
        android:background="@drawable/no_photo_120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapter_item_hero_tv_price"
        android:text="3500"
        android:drawableLeft="@drawable/icon_price"
        android:textColor="@color/white"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>