<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:dialogTheme">@style/Theme.App.AppCompatDialogStyle</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="Theme.App.AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/grey_42</item>
        <item name="android:background">@color/white</item>
        <item name="windowNoTitle">false</item> <!-- that's the important bit -->
    </style>
</resources>
