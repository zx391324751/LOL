<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:background="@color/grey_line"
            android:paddingTop="1dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/activity_main_layout_news"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:layout_marginRight="1dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_main_tv_indicator_0"
                    android:text="新闻资讯"
                    android:textColor="@color/grey_42"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_main_layout_hero"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_main_tv_indicator_1"
                    android:text="英雄资料"
                    android:textColor="@color/grey_42"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_main_layout_personal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_main_tv_indicator_2"
                    android:text="斗鱼直播"
                    android:textColor="@color/grey_42"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include
        android:layout_width="280dp"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        layout="@layout/layout_left_menu"/>

</android.support.v4.widget.DrawerLayout>
