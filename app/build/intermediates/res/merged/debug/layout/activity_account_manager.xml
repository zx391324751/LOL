<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="fill_parent"
        android:layout_height="56dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/activity_account_manager_iv_back"
                android:padding="6dp"
                android:src="@drawable/navicon_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:text="账号管理"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/activity_account_manager_btn_add"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="添加"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:padding="10dp"
        android:background="@color/yellow"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="最多只能添加5个账号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/activity_account_manager_lv_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout><!-- From: file:/D:/work/GithubWork/LOL/app/src/main/res/layout/activity_account_manager.xml -->