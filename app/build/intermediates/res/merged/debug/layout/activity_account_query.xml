<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"/>

    <ViewFlipper
        android:id="@+id/activity_account_query_vf"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/grey_b4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/grey_42"
                android:text="召唤师名称"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/activity_account_query_et_player_name"
                android:background="@color/white"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/grey_42"
                android:text="选择服务器"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/activity_account_query_layout_select_server"
                android:clickable="true"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_account_query_tv_server_name"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textColor="@color/grey_42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:background="@drawable/icon_chevron_right_copy"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <Button
                android:id="@+id/activity_account_query_btn_next"
                android:background="@color/yellow"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/activity_account_query_wb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </ViewFlipper>

</LinearLayout><!-- From: file:/D:/work/GithubWork/LOL/app/src/main/res/layout/activity_account_query.xml -->